<div class="form-group col-lg-4"></div>
<div class="form-group col-lg-4">
  <%- model_class = Ticket -%>
  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
  </div>
</div>
<div class="form-group col-lg-4">
  <div class="new-button">
    <%= link_to t('.new', :default => t("helpers.links.new")),
                new_ticket_path,
                :class => 'btn btn-primary' %>
    </div>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:priority) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @tickets.each do |ticket| %>
    <tr data-href=<%=ticket_path(ticket)%>>
        <td><%= link_to ticket.id, ticket_path(ticket) %></td>
        <td><%= ticket.title %></td>
        <td><%= truncate(ticket.description, length: 30, separator: ' ') %></td>
        <td><%= ticket.priority %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_ticket_path(ticket), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      ticket_path(ticket),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


